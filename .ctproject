build='npm i' #Install dependencies
run='npm start' #Run hugo server on localhost:1313 with livereload and drafts
deploy='npm run build.prod && firebase deploy' #Build site to public folder and deploy on firebase
compressimages='npm run images.compress' #Take images in /src/images folder and compress them into static/images
thumbnailimages='npm run images.thumbnail' #Take images in /src/images/posts folder and generate thumbnail in static/images/posts
runfast='hugo serve -t code-troopers -wD'

#Docker
dbuild='docker build -t codetroopers/website-hugo -f hugo-Dockerfile . && docker build -t codetroopers/website-node -f node-Dockerfile .'
drunfast='docker run --rm -it -v $PWD:/app -p 1313:1313 codetroopers/website-hugo serve -s /app/site -t code-troopers -D -w --bind="0.0.0.0"' #Run hugo server on localhost:1313 with livereload and drafts
drun='docker run --rm -it -v $PWD/site:/usr/src/app/site codetroopers/website-node npm run build && ct drunfast'
dcompressimages='docker run --rm -it -v $PWD/site:/usr/src/app/site codetroopers/website-node npm run images.compress'
dthumbnailimages='docker run --rm -it -v $PWD/site:/usr/src/app/site codetroopers/website-node npm run images.thumbnail'
