run='gulp serve --drafts'
dist='gulp serve --prod --drafts'
dbuild='docker build -t ct-website .'
drun='docker run -p 3000:3000 -u $(id -u):1000 -v $PWD/app:/src/app:rw --rm -ti codetroopers/ct-website'
ddev='docker run -p 3000:3000 -u $(id -u):1000 -v $PWD/app:/src/app:rw --rm -ti codetroopers/ct-website gulp serve --drafts'
drunl='docker run -p 3000:3000 -u $(id -u):1000 -v $PWD/app:/src/app:rw --rm -ti ct-website'
ddevl='docker run -p 3000:3000 -u $(id -u):1000 -v $PWD/app:/src/app:rw --rm -ti ct-website gulp serve --drafts'
dock='ct dbuild && ct drunl'
imagesl='docker run --rm -u $(id -u):1000 -v $PWD/app:/src/app:rw ct-website gulp compress-images'
images='docker run --rm -u $(id -u):1000 -v $PWD/app:/src/app:rw codetroopers/ct-website gulp compress-images'
